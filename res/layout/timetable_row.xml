<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="2dip" android:paddingBottom="2dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView android:id="@+id/mark" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:paddingRight="5px"
        android:textSize="18dip" android:minWidth="15px" />
    <TextView android:id="@+id/time_name"
        android:layout_width="fill_parent" android:textSize="16dip"
        android:layout_height="wrap_content" android:paddingRight="5px"
        android:minWidth="145px" android:layout_weight="2" />
    <TextView android:id="@+id/time" android:layout_width="fill_parent"
        android:textSize="16dip" android:layout_height="wrap_content"
        android:paddingRight="5px" android:minWidth="50px" android:text="~" />
    <TextView android:id="@+id/time_am_pm"
        android:layout_width="fill_parent" android:textSize="12dip"
        android:layout_height="wrap_content" android:paddingRight="5px"
        android:minWidth="5px" />
</LinearLayout>