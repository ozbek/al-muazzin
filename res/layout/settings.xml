<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/display_time_zone"
        style="@style/finePrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp" />

    <Button
        android:id="@+id/set_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification" />

    <Button
        android:id="@+id/set_interface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sinterface" />

    <Button
        android:id="@+id/set_advanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/advanced" />

    <CheckBox
        android:id="@+id/bismillah_on_boot_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/bismillah_on_boot_up" />

</LinearLayout>