<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" android:layout_width="fill_parent"
    android:orientation="vertical" android:background="@drawable/appwidget_background"
    android:id="@+id/widget_next_notification" android:gravity="center"
    android:focusable="true" android:clickable="true">
    <TextView android:id="@+id/time_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textColor="@android:color/white"
        android:gravity="center" />
    <TextView android:id="@+id/next_notification"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="@android:color/white" android:gravity="center" />
</LinearLayout>